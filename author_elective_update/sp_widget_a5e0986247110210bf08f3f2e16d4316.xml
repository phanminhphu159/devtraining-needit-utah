        <css>/* Colors */
$color-active-bg: #08a;
$color-active-text: #fff;
$color-heading-bg: #6ac;
$color-heading-text: #fff;

/* Breakpoints */
$break-small: 480px;

/* States */
.active {
  background: $color-active-bg;
  color: $color-active-text;
}

/* Make the table pivot */
@mixin pivot() {
  flex-direction: column;
}

table.table {
  table-layout: fixed;
  display: flex;
  flex-direction: column;
}

table.table tbody {
  flex: 1;
}

table.table thead,
table.table tbody {
  display: flex;
  flex-direction: column;
}

table.table thead tr,
table.table tbody tr {
  display: flex;
  flex-direction: row;
  flex: 1;
}

table.table thead th {
  background: $color-heading-bg;
  color: $color-heading-text;
}

table.table thead th,
table.table tbody td {
  flex: 1;
}

/* Interactions */
input.pivot {
  display: none; /* hide the checkbox */
}

input.pivot:checked + .button {
  background: $color-active-bg;
  color: $color-active-text;
}

input.pivot:checked ~ table.is-pivotable,
input.pivot:checked ~ * &gt; table.is-pivotable /* allow nesting */ {
  @include pivot();
  thead, tbody {
    flex-direction: row;
  }
  tr {
    flex-direction: column;
  }
  th, td {
    transform-origin: top left;
  }
}

/* Pivot on mobile */
@media screen and (max-width: $break-small) {
  table.table {
    @include pivot();
  }
}
</css>
